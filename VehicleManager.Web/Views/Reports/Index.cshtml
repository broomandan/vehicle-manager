@model IEnumerable<VehicleManager.Web.Models.MpgReportViewModel>

@{
    ViewBag.Title = "All Makes Mile Per Galon Report";
}

<h2>All Makes Mile Per Galon Report</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Make)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MinimumMpg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaximumMpg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AverageMpg)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinimumMpg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaximumMpg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageMpg)
            </td>
        </tr>
    }

</table>